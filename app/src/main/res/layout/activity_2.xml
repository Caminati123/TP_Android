<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <Button
        android:id="@+id/btnGetFromAPI"
        android:layout_width="358dp"
        android:layout_height="65dp"
        android:text="Get from API"
        app:layout_constraintBottom_toTopOf="@+id/btnLoad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:text="Save"
        app:layout_constraintBottom_toTopOf="@+id/btnPreviousPage"
        app:layout_constraintEnd_toStartOf="@+id/btnLoad"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLoad"
        android:layout_width="177dp"
        android:layout_height="64dp"
        android:layout_marginEnd="28dp"
        android:text="Load"
        app:layout_constraintBottom_toTopOf="@+id/btnPreviousPage"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPreviousPage"
        android:layout_width="358dp"
        android:layout_height="65dp"
        android:text="Previous page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="353dp"
        android:layout_height="313dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor  Incididunt ut labore et  dolore magna aliqua."
        android:textColor="#000000"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="43dp" />

</androidx.constraintlayout.widget.ConstraintLayout>