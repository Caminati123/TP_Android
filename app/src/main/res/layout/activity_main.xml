<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FF5722"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNextPage"
        android:layout_width="357dp"
        android:layout_height="63dp"
        android:backgroundTint="#000000"
        android:text="@string/btnNextPage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnReplaySound"
        android:layout_width="357dp"
        android:layout_height="63dp"
        android:backgroundTint="#000000"
        android:text="@string/btnReplaySound"
        app:layout_constraintBottom_toTopOf="@+id/btnNextPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnChangeStyle"
        android:layout_width="357dp"
        android:layout_height="63dp"
        android:backgroundTint="#000000"
        android:text="@string/btnChangeStyle"
        android:translationX="0px"
        android:translationY="0px"
        android:translationZ="0px"
        app:layout_constraintBottom_toTopOf="@+id/btnReplaySound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="296dp"
        android:layout_height="305dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnChangeStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/android_logo_660x330" />

</androidx.constraintlayout.widget.ConstraintLayout>